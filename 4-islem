import java.util.Scanner;


public class Hesap_Makinesi {
public static void main(String args[]) 
{
	Scanner scan=new Scanner(System.in);
	int toplama,cikarma,carpma,sec,sayi1,sayi2;
	double bolme;
	System.out.print("1.Sayi:");
	sayi1=scan.nextInt();
	System.out.print("2.Sayi:");
	sayi2=scan.nextInt();
	System.out.print("1-Toplama\n2-Cıkarma\n3-Bolme\n4-Carpma\n");
	System.out.print("Seçim=");
	sec=scan.nextInt();
	switch (sec) {
	case 1:
		toplama=sayi1+sayi2;
		System.out.print("Toplam="+toplama);
		break;
	case 2:
		cikarma=sayi1-sayi2;
		System.out.print("Fark="+cikarma);
		break;
	
	case 3:
		bolme=(double)sayi1/sayi2;
		System.out.print("Bolme="+bolme);
		break;
	case 4:
		carpma=sayi1*sayi2;
		System.out.print("Carpma="+carpma);
		break;
	default:
		break;
	}
	
}

	


}
