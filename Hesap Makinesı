import java.awt.SystemColor;
import java.util.Scanner;


public class menu {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scan1=new Scanner(System.in);
		Scanner scan2=new Scanner(System.in);
		Scanner scan3=new Scanner(System.in);
		dortislem islem=new dortislem();
		int sayi1,sayi2,sec;
		System.out.print("birinci sayi => ");
		sayi1=scan1.nextInt();
		System.out.print("ikinci sayi => ");
		sayi2=scan2.nextInt();
		System.out.print("1-toplama\n2-cÄ±karma\n3-carpma\n4-bolme => ");
		sec=scan3.nextInt();
		switch (sec) {
		case 1:
			System.out.print("sonuc => "+islem.toplam(sayi1, sayi2));
			break;
		case 2:
			System.out.print("sonuc => "+islem.fark(sayi1, sayi2));
			break;
		case 3:
			System.out.print("sonuc => "+islem.carpma(sayi1, sayi2));
			break;
		case 4:
			System.out.print("sonuc => "+islem.bolme(sayi1, sayi2));
			break;

		default:
			break;
		}
	}

}
